<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pointeur_hr_employee_mapping_tree" model="ir.ui.view">
        <field name="name">pointeur_hr.employee.mapping.tree</field>
        <field name="model">pointeur_hr.employee.mapping</field>
        <field name="arch" type="xml">
            <tree string="Correspondances employés">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="import_count"/>
                <field name="last_used"/>
                <button name="action_find_similar_names" type="object" icon="fa-info-circle" string="Informations"/>
                <button name="action_create_mapping" type="object" icon="fa-check" string="Appliquer"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pointeur_hr_employee_mapping_form" model="ir.ui.view">
        <field name="name">pointeur_hr.employee.mapping.form</field>
        <field name="model">pointeur_hr.employee.mapping</field>
        <field name="arch" type="xml">
            <form string="Correspondance employé">
                <header>
                    <button name="action_find_similar_names" string="Voir informations" type="object" class="oe_highlight"/>
                    <button name="action_create_mapping" string="Appliquer correspondance" type="object" confirm="Cela va mettre à jour toutes les lignes d'import avec ce nom. Continuer ?"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom importé"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="last_used"/>
                            <field name="import_count"/>
                        </group>
                    </group>
                    <group string="Imports utilisant cette correspondance" attrs="{'invisible': [('import_count', '=', 0)]}">
                        <field name="import_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="import_date"/>
                                <field name="user_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_pointeur_hr_employee_mapping_search" model="ir.ui.view">
        <field name="name">pointeur_hr.employee.mapping.search</field>
        <field name="model">pointeur_hr.employee.mapping</field>
        <field name="arch" type="xml">
            <search string="Rechercher une correspondance">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="last_used"/>
                <filter string="Utilisé récemment" name="recent" domain="[('last_used', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <filter string="Utilisé fréquemment" name="frequent" domain="[('import_count', '>=', 5)]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Employé" name="employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Dernière utilisation" name="last_used" context="{'group_by': 'last_used:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pointeur_hr_employee_mapping" model="ir.actions.act_window">
        <field name="name">Correspondances employés</field>
        <field name="res_model">pointeur_hr.employee.mapping</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune correspondance définie
            </p>
            <p>
                Les correspondances sont créées automatiquement lors de l'import des données.
            </p>
        </field>
    </record>

</odoo>
