<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue tree pour le rapport de présence -->
    <record id="pointeur_hr_view_attendance_report_tree" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.report.tree</field>
        <field name="model">pointeur_hr.attendance.report</field>
        <field name="arch" type="xml">
            <tree string="Rapport de présence détaillé" create="false" edit="false" delete="false" js_class="attendance_report_tree">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="default_location_id"/>
                <field name="location_id"/>
                <field name="source"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="attendance_type_ids" widget="many2many_tags"/>
                <field name="working_hours" widget="float_time" sum="Total"/>
                <field name="regular_hours" widget="float_time" sum="Total"/>
                <field name="overtime_hours" widget="float_time" sum="Total"/>
                <field name="late_hours" widget="float_time" sum="Total"/>
                <field name="early_leave_hours" widget="float_time" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- Vue form pour le wizard d'export -->
    <record id="pointeur_hr_view_attendance_report_export_wizard_form" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.report.export.wizard.form</field>
        <field name="model">pointeur_hr.attendance.report.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export du rapport de présence">
                <group>
                    <field name="export_type" widget="radio"/>
                </group>
                <footer>
                    <button name="action_export" string="Exporter" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Vue pivot pour le rapport de présence -->
    <record id="pointeur_hr_view_attendance_report_pivot" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.report.pivot</field>
        <field name="model">pointeur_hr.attendance.report</field>
        <field name="arch" type="xml">
            <pivot string="Rapport de présence">
                <field name="employee_id" type="row"/>
                <field name="date" type="col"/>
                <field name="working_hours" type="measure"/>
                <field name="regular_hours" type="measure"/>
                <field name="overtime_hours" type="measure"/>
                <field name="late_hours" type="measure"/>
                <field name="early_leave_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vue graph pour le rapport de présence -->
    <record id="pointeur_hr_view_attendance_report_graph" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.report.graph</field>
        <field name="model">pointeur_hr.attendance.report</field>
        <field name="arch" type="xml">
            <graph string="Rapport de présence">
                <field name="date"/>
                <field name="working_hours" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue search pour le rapport de présence -->
    <record id="pointeur_hr_view_attendance_report_search" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.report.search</field>
        <field name="model">pointeur_hr.attendance.report</field>
        <field name="arch" type="xml">
            <search string="Rechercher dans les présences">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="location_id"/>
                <field name="default_location_id"/>
                <field name="source"/>
                <separator/>
                <filter string="Ce mois" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01')), ('date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Ce jour" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Employé" name="employee" context="{'group_by': 'employee_id'}"/>
                <filter string="Département" name="department" context="{'group_by': 'department_id'}"/>
                <filter string="Lieu de pointage" name="location" context="{'group_by': 'location_id'}"/>
                <filter string="Source" name="source" context="{'group_by': 'source'}"/>
            </search>
        </field>
    </record>

    <!-- Action pour le rapport de présence -->
    <record id="pointeur_hr_action_hr_attendance_report" model="ir.actions.act_window">
        <field name="name">Rapport de présence détaillé</field>
        <field name="res_model">pointeur_hr.attendance.report</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="search_view_id" ref="pointeur_hr_view_attendance_report_search"/>
        <field name="context">{
            'search_default_this_month': 1,
            'search_default_employee': 1
        }</field>
    </record>

    <!-- Action pour le wizard d'export -->
    <record id="pointeur_hr_action_attendance_report_export_wizard" model="ir.actions.act_window">
        <field name="name">Export du rapport</field>
        <field name="res_model">pointeur_hr.attendance.report.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="pointeur_hr_view_attendance_report_export_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
