<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue form -->
    <record id="view_pointeur_hr_select_employees_form" model="ir.ui.view">
        <field name="name">pointeur_hr.select.employees.form</field>
        <field name="model">pointeur_hr.select.employees</field>
        <field name="arch" type="xml">
            <form string="Sélectionner les employés">
                <sheet>
                    <p class="alert alert-info">
                        Certaines lignes n'ont pas de correspondance d'employé. Veuillez sélectionner les employés correspondants.
                        Les lignes sans employé sélectionné resteront non mappées.
                    </p>
                    <field name="import_id" invisible="1"/>
                    <field name="line_ids">
                        <tree editable="bottom" create="0" delete="0">
                            <field name="import_line_id" invisible="1"/>
                            <field name="employee_name"/>
                            <field name="check_in" widget="datetime"/>
                            <field name="check_out" widget="datetime"/>
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="create_mapping"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_pointeur_hr_select_employees" model="ir.actions.act_window">
        <field name="name">Sélectionner les employés</field>
        <field name="res_model">pointeur_hr.select.employees</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
