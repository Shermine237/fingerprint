<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue form -->
    <record id="view_pointeur_attendance_type_form" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.type.form</field>
        <field name="model">pointeur_hr.attendance.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nom du type de présence"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue tree -->
    <record id="view_pointeur_attendance_type_tree" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.type.tree</field>
        <field name="model">pointeur_hr.attendance.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color" widget="color"/>
            </tree>
        </field>
    </record>

    <!-- Vue search -->
    <record id="view_pointeur_attendance_type_search" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.type.search</field>
        <field name="model">pointeur_hr.attendance.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pointeur_attendance_type" model="ir.actions.act_window">
        <field name="name">Types de présence</field>
        <field name="res_model">pointeur_hr.attendance.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_pointeur_attendance_type"
        name="Types de présence"
        action="action_pointeur_attendance_type"
        parent="hr_attendance.menu_hr_attendance_settings"
        sequence="100"/>
</odoo>
