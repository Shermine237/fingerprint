              name="Import du pointeur"
              parent="pointeur_hr_menu_import_root"
              action="pointeur_hr_action_import"
              sequence="10"/>

    <!-- Ajout des lignes d'import -->
    <menuitem id="pointeur_hr_menu_import_line"
              name="Lignes d'import"
