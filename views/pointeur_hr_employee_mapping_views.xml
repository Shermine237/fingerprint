<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pointeur_hr_employee_mapping_tree" model="ir.ui.view">
        <field name="name">pointeur_hr.employee.mapping.tree</field>
        <field name="model">pointeur_hr.employee.mapping</field>
        <field name="arch" type="xml">
            <tree string="Correspondances employés">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="last_used"/>
                <field name="import_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pointeur_hr_employee_mapping_form" model="ir.ui.view">
        <field name="name">pointeur_hr.employee.mapping.form</field>
        <field name="model">pointeur_hr.employee.mapping</field>
        <field name="arch" type="xml">
            <form string="Correspondance employé">
                <header>
                    <button name="action_find_similar_names" type="object" 
                            string="Rechercher noms similaires" class="oe_highlight"/>
                    <button name="action_deactivate" type="object" 
                            string="Désactiver" class="btn-danger"
                            attrs="{'invisible': [('active', '=', False)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_imports" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="import_count" string="Imports" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="last_used"/>
                            <field name="import_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_pointeur_hr_employee_mapping_search" model="ir.ui.view">
        <field name="name">pointeur_hr.employee.mapping.search</field>
        <field name="model">pointeur_hr.employee.mapping</field>
        <field name="arch" type="xml">
            <search string="Rechercher les correspondances">
                <field name="name"/>
                <field name="employee_id"/>
                <separator/>
                <filter string="Actif" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactif" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Employé" name="employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Import d'origine" name="import" context="{'group_by': 'import_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_employee_mapping" model="ir.actions.act_window">
        <field name="name">Correspondances employés</field>
        <field name="res_model">pointeur_hr.employee.mapping</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune correspondance trouvée
            </p>
            <p>
                Les correspondances sont créées automatiquement lors de l'import des données de pointage.
                Elles permettent d'associer les noms importés aux employés existants.
            </p>
        </field>
    </record>
</odoo>
