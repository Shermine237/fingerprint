<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue tree pour l'import des données du pointeur -->
    <record id="pointeur_hr_view_import_tree" model="ir.ui.view">
        <field name="name">pointeur_hr.import.tree</field>
        <field name="model">pointeur_hr.import</field>
        <field name="arch" type="xml">
            <tree string="Imports des données du pointeur" 
                  decoration-success="state=='done'" 
                  decoration-info="state=='imported'" 
                  decoration-muted="state=='cancelled'" 
                  decoration-danger="state=='error'">
                <field name="name"/>
                <field name="create_date"/>
                <field name="import_date"/>
                <field name="user_id"/>
                <field name="location_id"/>
                <field name="line_count"/>
                <field name="attendance_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vue search pour l'import des données du pointeur -->
    <record id="pointeur_hr_view_import_search" model="ir.ui.view">
        <field name="name">pointeur_hr.import.search</field>
        <field name="model">pointeur_hr.import</field>
        <field name="arch" type="xml">
            <search string="Rechercher les imports">
                <field name="name"/>
                <field name="user_id"/>
                <field name="location_id"/>
                <separator/>
                <filter string="Mes imports" name="my_imports" domain="[('user_id', '=', uid)]"/>
                <filter string="Non terminé" name="not_done" domain="[('state', '!=', 'done')]"/>
                <filter string="En erreur" name="error" domain="[('state', '=', 'error')]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Utilisateur" name="user" context="{'group_by': 'user_id'}"/>
                    <filter string="Lieu" name="location" context="{'group_by': 'location_id'}"/>
                    <filter string="Mois" name="month" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue form pour l'import des données du pointeur -->
    <record id="pointeur_hr_view_import_form" model="ir.ui.view">
        <field name="name">pointeur_hr.import.form</field>
        <field name="model">pointeur_hr.import</field>
        <field name="arch" type="xml">
            <form string="Import des données du pointeur">
                <header>
                    <button name="action_import_file" string="Importer" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_create_attendances" string="Créer présences" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'imported')]}"/>
                    <button name="action_search_employee_mappings" string="Rechercher correspondances" type="object"
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'imported')]}"/>
                    <button name="action_cancel" string="Annuler" type="object" 
                            attrs="{'invisible': [('state', 'in', ['cancelled', 'done'])]}"/>
                    <button name="action_reset" string="Réinitialiser" type="object" 
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,imported,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attendances" type="object" class="oe_stat_button" icon="fa-calendar"
                                attrs="{'invisible': [('attendance_count', '=', 0)]}">
                            <field name="attendance_count" widget="statinfo" string="Présences"/>
                        </button>
                        <button name="action_view_mappings" type="object" class="oe_stat_button" icon="fa-link">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Correspondances</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de l'import" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="file" filename="file_name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="file_name" invisible="1"/>
                            <field name="location_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="import_date" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="line_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lignes importées" name="imported_lines">
                            <field name="line_ids" readonly="1">
                                <tree decoration-success="state=='done'" 
                                      decoration-info="state=='mapped'"
                                      decoration-warning="state=='imported'"
                                      decoration-danger="state=='error'">
                                    <field name="employee_name"/>
                                    <field name="employee_id"/>
                                    <field name="date"/>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="total_hours" sum="Total"/>
                                    <field name="location_id"/>
                                    <field name="state"/>
                                    <button name="action_reset" type="object" 
                                            string="Réinitialiser" icon="fa-refresh"
                                            attrs="{'invisible': [('state', 'not in', ['error'])]}"/>
                                    <button name="action_view_attendance" type="object" 
                                            string="Voir présence" icon="fa-calendar"
                                            attrs="{'invisible': [('state', '!=', 'done')]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" nolabel="1" placeholder="Notes sur l'import..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue tree pour les lignes d'import -->
    <record id="pointeur_hr_view_import_line_tree" model="ir.ui.view">
        <field name="name">pointeur_hr.import.line.tree</field>
        <field name="model">pointeur_hr.import.line</field>
        <field name="arch" type="xml">
            <tree string="Lignes d'import" decoration-success="state == 'done'" decoration-danger="state == 'error'" decoration-info="state == 'imported'" decoration-warning="state == 'mapped'">
                <field name="import_id"/>
                <field name="employee_name"/>
                <field name="employee_id"/>
                <field name="display_id"/>
                <field name="date" widget="datetime"/>
                <field name="check_in" widget="datetime"/>
                <field name="check_out" widget="datetime"/>
                <field name="department"/>
                <field name="reg_hours" sum="Total" widget="float_time"/>
                <field name="ot1_hours" sum="Total" widget="float_time"/>
                <field name="ot2_hours" sum="Total" widget="float_time"/>
                <field name="total_hours" sum="Total" widget="float_time"/>
                <field name="state"/>
                <field name="error_message"/>
                <field name="attendance_id" invisible="1"/>
                <button name="action_view_attendance" type="object" icon="fa-calendar" attrs="{'invisible': [('attendance_id', '=', False)]}"/>
                <button name="find_employee_mapping" type="object" icon="fa-search" string="Rechercher" attrs="{'invisible': ['|', ('employee_id', '!=', False), ('state', '=', 'done')]}"/>
            </tree>
        </field>
    </record>

    <!-- Vue search pour les lignes d'import -->
    <record id="pointeur_hr_view_import_line_search" model="ir.ui.view">
        <field name="name">pointeur_hr.import.line.search</field>
        <field name="model">pointeur_hr.import.line</field>
        <field name="arch" type="xml">
            <search string="Rechercher les lignes d'import">
                <field name="employee_name"/>
                <field name="display_id"/>
                <field name="payroll_id"/>
                <field name="department"/>
                <field name="location_id"/>
                <filter string="En attente" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Importé" name="imported" domain="[('state', '=', 'imported')]"/>
                <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Erreur" name="error" domain="[('state', '=', 'error')]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Import" name="import" context="{'group_by': 'import_id'}"/>
                    <filter string="Employé" name="employee" context="{'group_by': 'employee_name'}"/>
                    <filter string="Département" name="department" context="{'group_by': 'department'}"/>
                    <filter string="Lieu de pointage" name="location" context="{'group_by': 'location_id'}"/>
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue form pour les lignes d'import -->
    <record id="pointeur_hr_view_import_line_form" model="ir.ui.view">
        <field name="name">pointeur_hr.import.line.form</field>
        <field name="model">pointeur_hr.import.line</field>
        <field name="arch" type="xml">
            <form string="Ligne d'import">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="imported,mapped,done,error"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="import_id" readonly="1"/>
                            <field name="employee_name"/>
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="display_id"/>
                            <field name="payroll_id"/>
                            <field name="date" widget="datetime"/>
                        </group>
                        <group>
                            <field name="check_in" widget="datetime"/>
                            <field name="check_out" widget="datetime"/>
                            <field name="department"/>
                            <field name="dept_code"/>
                        </group>
                    </group>
                    <group>
                        <group string="Heures travaillées">
                            <field name="reg_hours" widget="float_time"/>
                            <field name="ot1_hours" widget="float_time"/>
                            <field name="ot2_hours" widget="float_time"/>
                            <field name="total_hours" widget="float_time"/>
                        </group>
                        <group string="Informations complémentaires">
                            <field name="attendance_id"/>
                            <field name="location_id"/>
                            <field name="state"/>
                            <field name="error_message" attrs="{'invisible': [('state', '!=', 'error')]}"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="in_note" placeholder="Note d'entrée"/>
                        <field name="out_note" placeholder="Note de sortie"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_pointeur_hr_import_line" model="ir.actions.act_window">
        <field name="name">Lignes d'import</field>
        <field name="res_model">pointeur_hr.import.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="pointeur_hr_view_import_line_tree"/>
        <field name="search_view_id" ref="pointeur_hr_view_import_line_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune ligne d'import pour le moment
            </p>
            <p>
                Les lignes d'import apparaîtront ici après l'importation des données
            </p>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pointeur_hr_import" model="ir.actions.act_window">
        <field name="name">Import du pointeur</field>
        <field name="res_model">pointeur_hr.import</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="pointeur_hr_view_import_tree"/>
        <field name="search_view_id" ref="pointeur_hr_view_import_search"/>
        <field name="context">{'search_default_my_imports': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun import pour le moment
            </p>
            <p>
                Importez les données de présence depuis votre pointeur
            </p>
        </field>
    </record>

    <!-- Action -->
    <record id="pointeur_hr_import_action" model="ir.actions.act_window">
        <field name="name">Imports des données</field>
        <field name="res_model">pointeur_hr.import</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_not_done': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun import trouvé
            </p>
            <p>
                Importez vos fichiers de pointage pour créer les présences.
                Les fichiers doivent être au format CSV avec les colonnes suivantes :
                - Nom de l'employé
                - Date et heure d'entrée
                - Date et heure de sortie
            </p>
        </field>
    </record>
</odoo>
