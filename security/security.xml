<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition du groupe de sécurité -->
    <record id="group_pointeur_manager" model="res.groups">
        <field name="name">Pointeur Manager</field>
        <field name="category_id" ref="base.module_category_human_resources_employees"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Règles de sécurité pour les modèles -->
    <record id="pointeur_hr_location_rule" model="ir.rule">
        <field name="name">Pointeur HR Location Access</field>
        <field name="model_id" ref="model_pointeur_hr_location"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_pointeur_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="pointeur_hr_import_rule" model="ir.rule">
        <field name="name">Pointeur HR Import Access</field>
        <field name="model_id" ref="model_pointeur_hr_import"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_pointeur_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="pointeur_hr_import_line_rule" model="ir.rule">
        <field name="name">Pointeur HR Import Line Access</field>
        <field name="model_id" ref="model_pointeur_hr_import_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_pointeur_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="pointeur_hr_employee_mapping_rule" model="ir.rule">
        <field name="name">Pointeur HR Employee Mapping Access</field>
        <field name="model_id" ref="model_pointeur_hr_employee_mapping"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_pointeur_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="pointeur_hr_attendance_report_rule" model="ir.rule">
        <field name="name">Pointeur HR Attendance Report Access</field>
        <field name="model_id" ref="model_pointeur_hr_attendance_report"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_pointeur_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Règle globale pour restreindre l'accès aux autres utilisateurs -->
    <record id="pointeur_hr_global_rule" model="ir.rule">
        <field name="name">Pointeur HR Global Restriction</field>
        <field name="model_id" eval="False"/> <!-- S'applique à tous les modèles -->
        <field name="domain_force">[(0, '=', 1)]</field> <!-- Toujours faux pour bloquer l'accès -->
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
