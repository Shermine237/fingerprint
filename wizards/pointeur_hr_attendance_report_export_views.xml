<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulaire du wizard d'export -->
    <record id="pointeur_hr_view_attendance_report_export_wizard_form" model="ir.ui.view">
        <field name="name">pointeur_hr.attendance.report.export.wizard.form</field>
        <field name="model">pointeur_hr.attendance.report.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export du rapport de présence">
                <group>
                    <field name="export_type" widget="radio"/>
                    <field name="export_scope" widget="radio"/>
                    <field name="date_from" attrs="{'invisible': [('export_scope', '!=', 'all')], 'required': [('export_scope', '=', 'all')]}"/>
                    <field name="date_to" attrs="{'invisible': [('export_scope', '!=', 'all')], 'required': [('export_scope', '=', 'all')]}"/>
                </group>
                <footer>
                    <button name="action_export" string="Exporter" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir le wizard d'export -->
    <record id="pointeur_hr_action_attendance_report_export_wizard" model="ir.actions.act_window">
        <field name="name">Export du rapport de présence</field>
        <field name="res_model">pointeur_hr.attendance.report.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_pointeur_hr_attendance_report"/>
        <field name="binding_view_types">list,pivot</field>
    </record>
</odoo>
